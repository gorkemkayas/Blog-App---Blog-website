<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BlogApp</title>
    <link rel="stylesheet" href="/lib/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/lib/bootstrap-icons/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/style.css">

</head>
<body>
    <nav class="navbar shadow-sm navbar-expand-lg  navbar-dark bg-white">
        <div class="container">
            <a href="/posts" class="navbar-brand" style="color: rgb(24, 24, 24);"><i class="bi bi-code-slash" style="margin-right: 5%;"></i>BlogApp</a>
            <ul class="navbar-nav ms-auto">
                @if(User.Identity!.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a href="/posts/create" class="nav-link">New Post</a>
                    </li>
                    <li class="nav-item">
                        <a href="/posts/list" class="nav-link">Posts</a>
                    </li>
                    <li class="nav-item">
                        <a href="/users/profile/@User.Identity.Name" class="nav-link">@User.Identity.Name</a>
                    </li>
                    <li class="nav-item">
                        <a href="/users/logout" class="nav-link">Logout</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a href="/users/login" class="nav-link">Login</a>
                    </li>
                    <li class="nav-item">
                        <a href="/users/register" class="nav-link">Register</a>
                    </li>
                }
            </ul>
        </div>
    </nav>
    <div class="container mt-4">
        @RenderBody()
    </div>
    @RenderSection("Scripts", required: false)

</body>

</html>