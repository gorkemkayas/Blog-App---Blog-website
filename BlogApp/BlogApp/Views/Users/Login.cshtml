@model LoginViewModel

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6" style="background-color: #f0f0f0; border-radius: 10px;margin-top: 100px;">
        <div class="login-text mt-2" style="display:flex;justify-content: center;">
            <div class="login-part mt-2 mb-4" style="display:flex;">
                <div class="logo" style="display: flex; align-items: center;">
                    <i class="bi bi-code-slash" style="margin-right:4px;"></i><p style="margin-bottom: 2px;">BlogApp</p>
                    <p style="margin-bottom: 4px;"><p class="mx-1" style="margin-bottom: 1px;">|</p><h6 style="margin-bottom: 1px;">Login Informations</h6>
                </div>
                
            </div>

        </div>
        <form action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input type="email" name="Email" id="Email" class="form-control" placeholder="Email...">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input type="password" name="Password" id="Password" class="form-control" placeholder="Password...">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="loginButton my-2" style="display: flex; justify-content: center;">
                <div class="row">
                    <div class="col-md-10" style="display: flex;align-items: center;">
                        <i class="bi bi-fingerprint" style="margin-right: 5px;"></i><p style="margin: 0%;">Don't have an account? <a href="/Users/Register">Register  now!</a></p>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-secondary mx-1" style="margin-bottom: 8px; width: 100px;">Login</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-3"></div>

</div>